{
    "name": "cs50 custom cursor",
    "version": "1.0.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["style.css"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
       "default_popup": "popup.html",
       "default_title": "custom cursor"
    },
    "web_accessible_resources": [
        "images/*.png"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "storage"
    ]
}